# FlowMind Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# TradeStation OAuth Credentials
# ============================================
TS_CLIENT_ID=your_tradestation_client_id
TS_CLIENT_SECRET=your_tradestation_client_secret
TS_REDIRECT_URI=https://your-domain.com/api/oauth/tradestation/callback
TS_MODE=LIVE

# ============================================
# Unusual Whales API
# ============================================
UW_API_TOKEN=your_unusual_whales_api_token

# ============================================
# Domain & CORS
# ============================================
DOMAIN=your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================
# Performance Tuning
# ============================================
UVICORN_WORKERS=4

# ============================================
# Optional: MongoDB (if you want to use it)
# ============================================
# MONGO_URL=mongodb://mongo:27017/flowmind

# ============================================
# Optional: PostgreSQL (if you want to use it)
# ============================================
# DB_NAME=flowmind
# DB_USER=flowmind
# DB_PASSWORD=secure_password_here
# DB_HOST=localhost
# DB_PORT=5432
