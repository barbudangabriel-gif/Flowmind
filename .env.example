# FlowMind Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
BACKEND_PORT=8000
REDIS_HOST=redis
REDIS_PORT=6379

# Domain configuration
DOMAIN=flowmindanalytics.com

# ============================================================================
# UNUSUAL WHALES API (âœ… UPDATED - Correct Endpoints)
# ============================================================================
# Get your API key from: https://unusualwhales.com/account/api
# Supports multiple env var names:
UW_API_TOKEN=your_unusual_whales_api_key_here
# OR:
# UNUSUAL_WHALES_API_KEY=your_unusual_whales_api_key_here
# OR:
# UW_API_KEY=your_unusual_whales_api_key_here

# Base URL (default is correct)
UW_BASE_URL=https://api.unusualwhales.com

# Feature flags
UW_LIVE=0  # Set to 1 for production with real API key
UW_MIN_PREMIUM=25000  # Minimum premium filter (USD)

# ============================================================================
# TRADESTATION API
# ============================================================================
# Register your app at: https://developer.tradestation.com
TRADESTATION_API_KEY=your_tradestation_client_id
TRADESTATION_API_SECRET=your_tradestation_client_secret
TS_CLIENT_ID=your_tradestation_client_id
TS_CLIENT_SECRET=your_tradestation_client_secret
TS_REDIRECT_URI=http://localhost:8000/api/auth/tradestation/callback
TS_MODE=SIMULATION  # or LIVE

# ============================================================================
# REDIS & CACHE
# ============================================================================
REDIS_URL=redis://redis:6379/0
FM_FORCE_FALLBACK=0  # Force in-memory cache (for development)
FM_REDIS_REQUIRED=0  # Fail if Redis unavailable
FLOW_TTL=60  # Flow data cache TTL (seconds)
BACKTEST_TTL=300  # Backtest cache TTL (seconds)

# ============================================================================
# MONGODB (Optional)
# ============================================================================
MONGO_URL=mongodb://localhost:27017/flowmind

# ============================================================================
# FRONTEND
# ============================================================================
REACT_APP_BACKEND_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# SECURITY & OBSERVABILITY
# ============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENVIRONMENT=development  # development, staging, production
TEST_MODE=0  # For integration tests

# ============================================================================
# DEPLOYMENT (Docker/Caddy)
# ============================================================================
EMAIL=admin@example.com  # For Let's Encrypt

