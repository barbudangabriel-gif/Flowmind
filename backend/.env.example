# FlowMind Analytics - Environment Variables Template
# Copy to .env and set actual values
# Last Updated: October 21, 2025

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ============================================================================
# TradeStation API Configuration
# ============================================================================
# OAuth credentials (get from https://developer.tradestation.com/)
TS_CLIENT_ID=your_client_id_here
TS_CLIENT_SECRET=your_client_secret_here
TRADESTATION_API_KEY=your_api_key_here
TRADESTATION_API_SECRET=your_api_secret_here

# API endpoints
TS_BASE_URL=https://sim-api.tradestation.com
TS_AUTH_URL=https://api.tradestation.com/authorize
TS_TOKEN_URL=https://api.tradestation.com/oauth/token

# OAuth configuration
TS_REDIRECT_URI=http://localhost:8000/api/oauth/tradestation/callback
TS_SCOPE=openid offline_access

# Timeouts and refresh
TS_HTTP_TIMEOUT=15
TS_REFRESH_SKEW=60

# Mode (SIM or LIVE)
TS_MODE=SIM
TS_LIVE=0

# ============================================================================
# Unusual Whales API
# ============================================================================
UW_API_TOKEN=your_uw_token_here
UNUSUAL_WHALES_API_KEY=your_uw_token_here
UW_BASE_URL=https://api.unusualwhales.com
UW_LIVE=0
UW_RATE_LIMIT_DELAY=1.0

# ============================================================================
# Database Configuration
# ============================================================================
MONGO_URL=mongodb://localhost:27017/flowmind
REDIS_URL=redis://localhost:6379/0

# Redis fallback options
FM_FORCE_FALLBACK=0
FM_REDIS_REQUIRED=0
TEST_MODE=0

# ============================================================================
# Backend Server Configuration
# ============================================================================
REACT_APP_BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Application Settings
# ============================================================================
ENV=development
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your_secret_key_change_in_production

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_TTL=300
BACKTEST_CACHE_TTL=3600
CHAIN_CACHE_TTL=60

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_EXPERIMENTAL=0
DEMO_MODE=0
ENABLE_METRICS=0
ENABLE_TRACING=0

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ============================================================================
# External Services (Optional)
# ============================================================================
OPENAI_API_KEY=
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
SENTRY_DSN=

# ============================================================================
# NOTES
# ============================================================================
# Required: TS_CLIENT_ID, TS_CLIENT_SECRET, UW_API_TOKEN
# Optional: REDIS_URL, MONGO_URL (has fallbacks)
# See TECHNICAL_DEBT_AUDIT.md for complete documentation