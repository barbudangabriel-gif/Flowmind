import React, { useState, useEffect } from 'react';
import axios from 'axios';

const TradeStationAuth = () => {
 const [authStatus, setAuthStatus] = useState(null);
 const [loading, setLoading] = useState(true);
 const [error, setError] = useState(null);
 const [authenticating, setAuthenticating] = useState(false);

 const BACKEND_URL = process.env.REACT_APP_BACKEND_URL || 'http://localhost:8000';
 const API = `${BACKEND_URL}/api`;

 const checkAuthStatus = async () => {
 try {
 setLoading(true);
 const response = await axios.get(`${API}/auth/tradestation/status`);
 setAuthStatus(response.data);
 setError(null);
 } catch (err) {
 setError(`Failed to check auth status: ${err.message}`);
 } finally {
 setLoading(false);
 }
 };

 const initiateLogin = async () => {
 try {
 setAuthenticating(true);
 
 // NU mai folosim popup - redirect direct Ã®n aceeaÈ™i fereastrÄƒ
 console.log('ðŸ”— Initiating direct redirect authentication (no popup)');
 console.log(' Using API:', API);
 
 const response = await axios.get(`${API}/auth/tradestation/login`);
 const authUrl = response.data.auth_url;
 
 console.log(' Redirecting to TradeStation:', authUrl);
 
 // SalveazÄƒ starea cÄƒ suntem Ã®n proces de autentificare
 localStorage.setItem('ts_auth_in_progress', 'true');
 localStorage.setItem('ts_auth_started', Date.now().toString());
 
 // Redirect direct Ã®n aceeaÈ™i fereastrÄƒ (nu popup)
 window.location.href = authUrl;
 
 } catch (err) {
 console.error(' Login initiation failed:', err);
 setError(`Failed to initiate login: ${err.message}`);
 setAuthenticating(false);
 }
 };

 const logout = async () => {
 try {
 await axios.delete(`${API}/auth/tradestation/logout`);
 checkAuthStatus();
 } catch (err) {
 setError(`Failed to logout: ${err.message}`);
 }
 };

 const refreshToken = async () => {
 try {
 await axios.post(`${API}/auth/tradestation/refresh`);
 checkAuthStatus();
 } catch (err) {
 setError(`Failed to refresh token: ${err.message}`);
 }
 };

 useEffect(() => {
 // VerificÄƒ dacÄƒ ne Ã®ntoarcem din autentificare
 const checkAuthReturn = () => {
 const authInProgress = localStorage.getItem('ts_auth_in_progress');
 const authStartTime = localStorage.getItem('ts_auth_started');
 
 if (authInProgress === 'true') {
 console.log('ðŸ”„ Detected return from authentication process');
 
 // CurÄƒÈ›Äƒ flag-urile
 localStorage.removeItem('ts_auth_in_progress');
 localStorage.removeItem('ts_auth_started');
 
 // VerificÄƒ dacÄƒ autentificarea a avut succes
 setTimeout(() => {
 checkAuthStatus();
 }, 1000);
 }
 };
 
 checkAuthReturn();
 checkAuthStatus();
 }, []);

 if (loading) {
 return (
 <div className="bg-gray-900 p-6 rounded-lg border border-gray-700">
 <div className="flex items-center justify-center">
 <div className="animate-spin w-8 h-8 border-4 border-blue-500 border-t-transparent rounded-full mr-3"></div>
 <span className="text-gray-300">Checking TradeStation status...</span>
 </div>
 </div>
 );
 }

 const isAuthenticated = authStatus?.authentication?.authenticated;

 return (
 <div className="bg-gray-900 p-6 rounded-lg border border-gray-700">
 <div className="flex items-center justify-between mb-4">
 <h3 className="text-xl font-medium text-[rgb(252, 251, 255)] flex items-center">
 TradeStation Connection
 </h3>
 <div className={`px-3 py-1 rounded-full text-xl font-medium ${
 isAuthenticated 
 ? 'bg-green-800 text-green-200' 
 : 'bg-red-800 text-red-200'
 }`}>
 {isAuthenticated ? ' Connected' : ' Not Connected'}
 </div>
 </div>

 {error && (
 <div className="bg-red-800 border border-red-600 text-red-200 p-3 rounded-lg mb-4">
 <p className="text-xl">{error}</p>
 </div>
 )}

 <div className="space-y-4">
 {/* Status Information */}
 <div className="bg-gray-800 p-4 rounded-lg border border-gray-600">
 <h4 className="text-3xl font-medium text-[rgb(252, 251, 255)] mb-3">Connection Status</h4>
 <div className="grid grid-cols-2 gap-4 text-xl">
 <div>
 <span className="text-gray-400">Environment:</span>
 <span className="text-[rgb(252, 251, 255)] ml-2 font-mono">
 {authStatus?.authentication?.environment}
 </span>
 </div>
 <div>
 <span className="text-gray-400">Has Access Token:</span>
 <span className="text-[rgb(252, 251, 255)] ml-2">
 {authStatus?.authentication?.has_access_token ? ' Yes' : ' No'}
 </span>
 </div>
 <div>
 <span className="text-gray-400">Has Refresh Token:</span>
 <span className="text-[rgb(252, 251, 255)] ml-2">
 {authStatus?.authentication?.has_refresh_token ? ' Yes' : ' No'}
 </span>
 </div>
 <div>
 <span className="text-gray-400">Token Expires:</span>
 <span className="text-[rgb(252, 251, 255)] ml-2 font-mono text-lg">
 {authStatus?.authentication?.token_expires 
 ? new Date(authStatus.authentication.token_expires).toLocaleString()
 : 'Unknown'
 }
 </span>
 </div>
 </div>
 </div>

 {/* Action Buttons */}
 <div className="flex flex-wrap gap-3">
 {!isAuthenticated ? (
 <>
 <button
 onClick={initiateLogin}
 disabled={authenticating}
 className={`px-6 py-3 rounded-lg font-medium transition-all flex items-center ${
 authenticating 
 ? 'bg-gray-600 cursor-not-allowed text-gray-400' 
 : 'bg-blue-600 hover:bg-blue-700 text-[rgb(252, 251, 255)]'
 }`}
 >
 {authenticating ? (
 <>
 <div className="animate-spin w-5 h-5 border-2 border-gray-400 border-t-transparent rounded-full mr-2"></div>
 Connecting...
 </>
 ) : (
 <>ðŸ”— Connect to TradeStation</>
 )}
 </button>
 
 <div className="text-xl text-gray-400 flex items-center">
 No popup required - direct authentication in same window
 </div>
 </>
 ) : (
 <>
 <button
 onClick={logout}
 className="px-4 py-2 bg-red-600 hover:bg-red-700 text-[rgb(252, 251, 255)] rounded-lg font-medium transition-all"
 >
 ðŸšª Disconnect
 </button>
 
 {authStatus?.authentication?.has_refresh_token && (
 <button
 onClick={refreshToken}
 className="px-4 py-2 bg-green-600 hover:bg-green-700 text-[rgb(252, 251, 255)] rounded-lg font-medium transition-all"
 >
 ðŸ”„ Refresh Token
 </button>
 )}
 </>
 )}
 
 <button
 onClick={checkAuthStatus}
 className="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-[rgb(252, 251, 255)] rounded-lg font-medium transition-all"
 >
 Check Status
 </button>
 </div>

 {/* Connection Test */}
 {authStatus?.connection_test && (
 <div className="bg-gray-800 p-4 rounded-lg border border-gray-600">
 <h4 className="text-3xl font-medium text-[rgb(252, 251, 255)] mb-2">Connection Test</h4>
 <div className={`text-xl ${
 authStatus.connection_test.status === 'success' 
 ? 'text-green-400' 
 : authStatus.connection_test.status === 'warning'
 ? 'text-yellow-400'
 : 'text-red-400'
 }`}>
 {authStatus.connection_test.message}
 </div>
 {authStatus.connection_test.accounts_found !== undefined && (
 <div className="text-gray-400 text-xl mt-1">
 Accounts found: {authStatus.connection_test.accounts_found}
 </div>
 )}
 </div>
 )}

 {/* Help Text */}
 <div className="bg-blue-900 p-4 rounded-lg border border-blue-700">
 <h4 className="text-3xl font-medium text-blue-200 mb-2"> About TradeStation Integration</h4>
 <div className="text-blue-300 text-xl space-y-1">
 <p>â€¢ <strong>Real-time data:</strong> Get live market quotes and prices</p>
 <p>â€¢ <strong>Professional charts:</strong> Display accurate candlestick data</p>
 <p>â€¢ <strong>Account integration:</strong> View your mindfolio and balances</p>
 <p>â€¢ <strong>Trading capabilities:</strong> Place and manage orders (future)</p>
 </div>
 </div>
 </div>
 </div>
 );
};

export default TradeStationAuth;